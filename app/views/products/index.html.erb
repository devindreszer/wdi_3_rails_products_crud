<ul>All Products
<% @products.each do |product| %>
  <!-- link_to viw helper will create an anchor tag with the product.name
  and the URL that is the path to the individul product -->
  <li>
  Name is <%= link_to(product.name, product_path(product.id)) %> | Price is <%= product.price %> | <%= link_to('Edit', edit_product_path(product)) %> | <%= link_to 'Destroy', product, method: :delete, data: {confirm: 'Are you sure?'} %>
  </li>
<% end %>
</ul>
